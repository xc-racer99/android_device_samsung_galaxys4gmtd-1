#
# init.rc file for GPS: This is here to allow for devices
# to provide their own GPS initialization code without
# conflicting with the default GPS init. (i.e. Vibrant, Galaxy S 4G)
#
# Some files are dummies in that they only exist on certain variants.
# They are only started when they're present; if they're not then its
# a harmless error.
#

service gps_init /sbin/init.aries.gps.sh
    user root
    oneshot
    disabled
    seclabel u:r:gps_init:s0

# +STE GPS Daemon
#GPS_CHIPSET_STE_CG2900
service agpsd /vendor/bin/agpsd
    class core
    user gps
    group system inet wakelock
    oneshot
    disabled

# +STE UART Contol Application
service ste-cg29xx_ctrl /vendor/bin/ste-cg29xx_ctrl -b 115200 /dev/s3c2410_serial1
    user system
    group system misc
    oneshot
    disabled

on boot
    start gps_init

on post-fs-data
    # create data/gps for GPS daemon
    mkdir /data/gps 700 gps system
    chown gps system /data/gps
    chown gps root /sys/class/sec/gps/GPS_PWR_EN/value
    chmod 660 /sys/class/sec/gps/GPS_PWR_EN/value

on property:gps.variant=cg2900
    # bind mount files
    mount squashfs /vendor/lib/libclientgps.so.telusgalaxys4gmtd /vendor/lib/libclientgps.so ro bind
    mount squashfs /vendor/lib/hw/gps.aries.so.telusgalaxys4gmtd /vendor/lib/hw/gps.aries.so ro bind
    start agpsd

on property:init.svc.agpsd=stopped
    start ste-cg29xx_ctrl
